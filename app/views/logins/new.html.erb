<div class="container">
  <div class="row centre">
      <div class="card white">
        <div class="row">
          <div class="col s12">
            <h3 class="center-align">Log in</h3>
          </div>
        </div>
        <div class="row">
          <%= form_for :logins do |s| %>



          <div class="row">
            <div class="col s12">
                <div class="input-field col s10">
                      <i class="material-icons prefix">email</i>
                      <%= s.email_field :email,placeholder: "Email",autofocus: true %>
                </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
                <div class="input-field col s10">
                      <i class="material-icons prefix">lock</i>
                      <%= s.password_field :password,placeholder: "password",autofocus: true %>
                </div>
            </div>
          </div>


          <div class="row">
                <div class="input-field col s10">
                    <%= s.button "Log in",class: "btn waves-effect waves-light right" %>
                  </div>
          </div>

          <% end %>
        </div>

      </div>
  </div>
  </div>
